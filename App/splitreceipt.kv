ScreenManager:
    MainScreen:
    NewScreen:

<MainScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, None)
        height: 50

        Label:
            text: "# of People"
            font_size: 24
        TextInput:
            id: input_people
            multiline: False
            font_size: 24
        
        Label:
            text: "# of Items"
            font_size: 24
        TextInput:
            id: input_items
            multiline: False
            font_size: 24
        
    Button:
        text: 'Display Text'
        size_hint: (1, None)
        height: 50
        on_press: root.create_table()

    GridLayout:
        id: table_grid
        cols: 1

<NewScreen>:
    Button:
        text: 'Display Text'
        size_hint: (1, None)
        height: 50
        on_press: root.create_table()

    GridLayout:
        id: table_grid
        cols: 1


