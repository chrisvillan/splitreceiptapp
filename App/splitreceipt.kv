ScreenManager:
    MainScreen:
    NewScreen:

<MainScreen>:
    orientation: 'vertical'
    #--- Whole screen
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.13,0.34,0.48,1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Button:
            text: "Go to New Screen"
            on_release: app.root.current = "new_screen"
            size_hint_y: 0.11111

        #--- Below top button
        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0.22,0.64,0.65,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: data_boxlayout
            orientation: 'horizontal'
            size_hint_y: 1

            #--- Left layout below top button
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 0.34,0.80,0.60,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: left_boxlayout
                orientation: 'vertical'
                size_hint_x: 1

                #--- Left Scrollview 
                ScrollView:
                    canvas.before:
                        Color:
                            rgba: 1.00,0.80,0.95,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    do_scroll_y: True
                    size_hint_y: 1

                    GridLayout:
                        canvas.before:
                            Color:
                                rgba: 0.75,0.99,1,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        id: left_boxlayout2
                        cols: 3
                        orientation: 'lr-tb'
                        size_hint_y: None
                        height: self.minimum_height

                #--- Subtotal row
                BoxLayout:
                    orienation: 'horizontal'
                    size_hint_y: 0.07694

                    Label:
                        id: label_subtotal_item
                        text: "Sub Total: $"
                
                    Label:
                        id: label_subtotal_price
                        text: "0.00"

                
                #--- Tax row
                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: 0.47,0.00,0.00,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id: tax_boxlayout
                    size_hint_y: 0.07694
                    orientation: 'horizontal'

                    Label:
                        id: label_tax
                        text: "Tax $:"
                        
                    TextInput:
                        id: textinput_tax
                        hint_text: "Tax"

                #--- Tip row
                BoxLayout:
                    canvas.before:
                        Color:
                            rgba: 0.00,0.09,0.27,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id: tip_boxlayout
                    orientation: 'horizontal'
                    size_hint_y: 0.07694
                    
                    Label:
                        id: label_tip
                        text: "Tip $:"

                    TextInput:
                        id: textinput_tip
                        hint_text: "Tip"

                #--- Grand Total row
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.07694

                    Label:
                        id: label_grandtotal_item
                        text: "Grand Total: $"

                    Label:
                        id: label_grandtotal_price
                        text: "0.00"

                #--- Add Item row
                Button:
                    text: "Add Item"
                    on_release: root.add_to_left_preset()
                    size_hint_y: 0.07694

            #--- Right Layout below top
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: 0.23,0.05,0.64,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: right_boxlayout
                orientation: 'vertical'
                size_hint_x: 0.4285

                ScrollView:
                    canvas.before:
                        Color:
                            rgba: 0.82,0.29,0.36,1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    do_scroll_y: True
                    size_hint_y: 1
                    GridLayout:
                        canvas.before:
                            Color:
                                rgba: 1.00,0.74,0.26,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        id: right_boxlayout2
                        cols: 1
                        orientation: 'tb-lr'
                        size_hint_y: None
                        height: self.minimum_height
                Button:
                    text: "Add Person"
                    on_release: root.add_to_right()
                    size_hint_y: 0.0588



<NewScreen>:
    orientation: 'vertical'
    
    BoxLayout:
        orientation: 'vertical'
        
        Button:
            text: "Go to Main Screen"
            on_release: app.root.current = "main_screen"
            size_hint_y: 0.11111

        BoxLayout:
            orientation: 'horizontal'

            #--- Left Layout
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6667

                #--- Left Header
                GridLayout:
                    id: grid_left_header
                    cols: 3
                    size_hint_y: 0.0769

                    Label:
                        id: label_left_header_item
                        text: 'Item'
                        size_hint_x: 0.5
                    Label:
                        id: label_left_header_price
                        text: 'Price'
                        size_hint_x: 0.25
                    Label:
                        id: label_left_header_qty
                        text: 'Qty'
                        size_hint_x: 0.25

                #--- Left Scroll
                ScrollView:
                    id: scrollview_left
                    scrollview_right: scrollview_right
                    do_scroll_y: True
                    scroll_y: self.scrollview_right.scroll_y
                    size_hint_y: 1

                    GridLayout:
                        id: table_grid_left
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height

                #--- Bottom Layout
                BoxLayout:
                    id: bottom_left_boxlayout
                    orientation: 'vertical'
                    size_hint_y: 0.3076

                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        Label:
                            id: label_bl_subtotal_item
                            text: "Sub Total"
                            size_hint_x: 0.5
                        Label:
                            id: label_bl_subtotal_price
                            text: "0.00"
                            size_hint_x: 0.25
                        Label:
                            id: label_bl_subtotal_total
                            text: "0.00"
                            size_hint_x: 0.25
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        
                        Label:
                            id: label_bl_tax_item
                            text: "Tax"
                            size_hint_x: 0.5
                        Label:
                            id: label_bl_tax_price
                            text: "0.00"
                            size_hint_x: 0.25
                        Label:
                            id: label_bl_tax_total
                            text: "0.00"
                            size_hint_x: 0.25
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10

                        Label:
                            id: label_bl_tip_item
                            text: "Tip"
                            size_hint_x: 0.5
                        Label:
                            id: label_bl_tip_price
                            text: "0.00"
                            size_hint_x: 0.25
                        Label:
                            id: label_bl_tip_total
                            text: "0.00"
                            size_hint_x: 0.25
                    BoxLayout:
                        orientation: 'horizontal'
                        spacing: 10
                        Label:
                            id: label_bl_grandtotal_item
                            text: "Grand Total"
                            size_hint_x: 0.5
                        Label:
                            id: label_bl_grandtotal_price
                            text: "0.00"
                            size_hint_x: 0.25
                        Label:
                            id: label_bl_grandtotal_total
                            text: "0.00"
                            size_hint_x: 0.25



            #--- Right Layout   
            BoxLayout:
                orientation: 'vertical'

                ScrollView:
                    id: scrollview_right_header
                    scrollview_right: scrollview_right
                    do_scroll_x: True
                    do_scroll_y: False
                    scroll_x: self.scrollview_right.scroll_x
                    size_hint_y: 0.0769

                    GridLayout:
                        id: grid_right_header
                        cols: 1
                        spacing: 10
                        size_hint_y: None
                        size_hint_x: None
                        height: self.minimum_height
                        width: self.minimum_width

                ScrollView:
                    id: scrollview_right
                    scrollview_left: scrollview_left
                    do_scroll_y: True
                    do_scroll_x: True
                    scroll_y: self.scrollview_left.scroll_y
                    size_hint_y: 1

                    GridLayout:
                        id: table_grid_right
                        cols: 1
                        spacing: 10
                        orientation: 'lr-tb'
                        size_hint_y: None
                        size_hint_x: None
                        height: self.minimum_height
                        width: self.minimum_width

                ScrollView:
                    id: scrollview_right_bottom
                    scrollview_right: scrollview_right
                    do_scroll_x: True
                    do_scroll_y: False
                    scroll_x: self.scrollview_right.scroll_x
                    size_hint_y: 0.3076

                    GridLayout:
                        id: grid_right_bottom
                        cols: 1
                        orientation: 'lr-tb'
                        size_hint_y: None
                        size_hint_x: None
                        height: self.minimum_height
                        width: self.minimum_width

            

                
        
