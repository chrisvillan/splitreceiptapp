ScreenManager:
    MainScreen:
    NewScreen:

<MainScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    size: 100, 100
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Go to New Screen"
            on_release: app.root.current = "new_screen"
            size_hint: (1, None)
            height: 50

        BoxLayout:
            id: data_boxlayout
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: 1

            BoxLayout:
                id: left_boxlayout
                orientation: 'vertical'
                spacing: 10
                size_hint_y: 1

                ScrollView:
                    do_scroll_y: True
                    GridLayout:
                        id: left_boxlayout2
                        cols: 3
                        spacing: 10
                        orientation: 'lr-tb'
                        size_hint_y: None
                        height: self.minimum_height

                Label:
                    id: label_subtotal
                    text: "Sub Total"
                    size_hint_y: 0.1
                
                TextInput:
                    id: textinput_tax
                    hint_text: "Tax"
                    size_hint_y: 0.1

                TextInput:
                    id: textinput_tip
                    hint_text: "Tip"
                    size_hint_y: 0.1

                Label:
                    id: label_grandtotal
                    text: "Grand Total"
                    size_hint_y: 0.1

                Button:
                    text: "Add Item"
                    on_release: root.add_to_left_preset()
                    size_hint_y: 0.1

            BoxLayout:
                id: right_boxlayout
                orientation: 'vertical'
                spacing: 10
                size_hint_y: 1
                size_hint_x: 0.4

                ScrollView:
                    do_scroll_y: True
                    GridLayout:
                        id: right_boxlayout2
                        cols: 1
                        spacing: 10
                        orientation: 'tb-lr'
                        size_hint_y: None
                        height: self.minimum_height
                Button:
                    text: "Add Person"
                    on_release: root.add_to_right()
                    size_hint_y: 0.1



<NewScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Go to Main Screen"
            on_release: app.root.current = "main_screen"
            size_hint: (1, None)
            height: 50
        
        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6

                GridLayout:
                    id: grid_left_header
                    cols: 2
                    spacing: 10
                    size_hint_y: 0.1
                    height: self.minimum_height

                ScrollView:
                    id: scrollview_left
                    scrollview_right: scrollview_right
                    do_scroll_y: True
                    scroll_y: self.scrollview_right.scroll_y
                    GridLayout:
                        id: table_grid_left
                        cols: 1
                        spacing: 10
                        size_hint_y: None
                        height: self.minimum_height
                        
            BoxLayout:
                orientation: 'vertical'

                ScrollView:
                    id: scrollview_right_header
                    scrollview_right: scrollview_right
                    do_scroll_x: True
                    do_scroll_y: False
                    size_hint_y: 0.1
                    scroll_x: self.scrollview_right.scroll_x
                    GridLayout:
                        id: grid_right_header
                        cols: 1
                        spacing: 10
                        size_hint_y: None
                        size_hint_x: None
                        height: self.minimum_height
                        width: self.minimum_width
                ScrollView:
                    id: scrollview_right
                    scrollview_left: scrollview_left
                    do_scroll_y: True
                    do_scroll_x: True
                    scroll_y: self.scrollview_left.scroll_y
                    GridLayout:
                        id: table_grid_right
                        cols: 1
                        spacing: 10
                        orientation: 'lr-tb'
                        size_hint_y: None
                        size_hint_x: None
                        height: self.minimum_height
                        width: self.minimum_width
        
