ScreenManager:
    MainScreen:
    NewScreen:

<MainScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'vertical'
        
        Button:
            text: "Go to New Screen"
            on_release: app.root.current = "new_screen"
            size_hint: (1, None)
            height: 50

        Label:
            text: "# of People"
            font_size: 24
        TextInput:
            id: input_people
            multiline: False
            font_size: 24
        
        Label:
            text: "# of Items"
            font_size: 24
        TextInput:
            id: input_items
            multiline: False
            font_size: 24

<NewScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Go to Main Screen"
            on_release: app.root.current = "main_screen"
            size_hint: (1, None)
            height: 50

        BoxLayout:
            orientation: 'vertical'

            GridLayout:
                id: table_grid
                cols: 1
            
            

        
